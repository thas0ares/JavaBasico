package testes;

import java.util.Scanner;

public class Desafio2 {
	/*
	 * 1 - Escreva um programa que leia a quantidade de números fornecida pelo usuário e, ao final, exiba a soma dos pares e dos ímpares
	 */
	public static void main(String[] args) {

		int par = 0;
		int impar = 0;
		int soma = 0;
		int numero;
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Digite um número: ");
		numero = scanner.nextInt();
		
		while (numero != 0) {
			
			soma = soma + numero;
			
			if (numero % 2 == 0) {
				par = par + 1;
			}
			
			if (numero % 2 == 1) {
				impar = impar + 1;
			}
		}
		
		System.out.println("O total dos valores pares digitados: " + par);
		System.out.println("O total dos valores ímpares digitados: " + impar);
	}

}
