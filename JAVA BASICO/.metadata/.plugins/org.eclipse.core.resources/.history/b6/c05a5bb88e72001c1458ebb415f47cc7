package testes;

import java.util.Scanner;

public class Desafio1 {
	/*
	 * 1- Total dos valores digitados 2- Total dos valores pares digitados 3- Total
	 * dos valor"Variável total digi antes da soma "es ímpares digitados 4- Valores
	 * acima de 100 digitados 5- Média dos valores digitados
	 */
	public static void main(String[] args) {

		int totalDigi = 0;
		int totalPar = 0;
		int totalImpar = 0;
		int acimaCem = 0;
		int media = 0;
		int cont = 0;
		int escolha;
		Scanner scanner = new Scanner(System.in);

		System.out.println("Digite um número ou digite 0 para interromper: ");
		escolha = scanner.nextInt();

		while (escolha != 0) {
			// System.err.println("Variável total digi antes da soma " + totalDigi);
			totalDigi = totalDigi + escolha; // soma o valor digitado AGORA com o digitado ANTES
			cont++; // conta quantas vezes o usuário digitou um número
			// System.out.println();
			// System.err.println("Variável total digi depois da soma " + totalDigi);
			// System.out.println();
			if (escolha % 2 == 0) {
				totalPar = totalPar + 1;
			}
			if (escolha % 2 == 1) {
				totalImpar = totalImpar + 1;
			}
			if (escolha > 100) {
				acimaCem = acimaCem + 1;
			}
			if (escolha >= 0)
				media = totalDigi / cont;

			System.out.println("Digite um número ou digite 0 para interromper: ");
			escolha = scanner.nextInt();
		}
		System.out.println("A soma dos valores digitados é " + totalDigi);
		// System.out.println("A quantidade de números digitados foi " + cont);
		System.out.println("A total dos valores pares digitados é " + totalPar);
		System.out.println("A total dos valores ímpares digitados é " + totalImpar);
		System.out.println("Os valores acima de 100 digitados:" + acimaCem);
		System.out.println("A média dos valores digitados: " + media);
	}
}
