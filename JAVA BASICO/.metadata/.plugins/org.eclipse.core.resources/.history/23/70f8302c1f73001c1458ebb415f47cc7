package testes;

import java.util.Scanner;

public class Desafio3 {
	/*
	 * 2 - Escreva um programa que leia a 5 números e exiba ao final qual deles foi o maior digitado e qual deles foi o menor digitado
	 */
	public static void main(String[] args) {
	
		Scanner scanner = new Scanner(System.in);
		int n;
		int maior = 0;
		int menor = 0;
		
		System.out.println("Digite 5 números: ");
		
		for (int i = 0; i < 5; i=i+1) {
			n = scanner.nextInt();
			
			if(n>maior) {
				maior = n;
			}else (n<menor){
				menor = n;
			}
		}
		System.out.println("O Maior número digitado é " + maior +",já o menor foi o "+ menor);
	}
}
