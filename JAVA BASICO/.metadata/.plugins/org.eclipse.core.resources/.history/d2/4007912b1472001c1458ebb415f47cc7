package exerciciorepita;

import javax.swing.JOptionPane; //são paineis prontos/telas prontas

public class ExercicioRepita {

	public static void main(String[] args) {
		// JOptionPane.showMessageDialog(null -> nome da janela, "Olá Mundo!", "Boas
		// Vindas", JOptionPane.ERROR_MESSAGE); exemplo
		int n = 0;
		int s = 0;
		do {
			n = Integer.parseInt(JOptionPane.showInputDialog(null,
					"<html>Informa um número: <br> <em>(valor 0 interrompe)</em></html/>"));
			if (s += n) {
				JOptionPane.showMessageDialog(null, "<html>Resultado: <hr>" + "<br>Total de Valores: " + s + "</html>");
			}
			if (n % 2 == 0) {
				JOptionPane.showMessageDialog(null, "<html>Resultado: <hr>" + "<br>Total de pares " + n + "</html>");
			}

		} while (n != 0); // n diferente de 0
	}

}
