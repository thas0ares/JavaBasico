package funcao01;

public class Fatorial {
	// atributos
	private int num = 0;
	private int fat = 1;
	private String formula = "";

	// métodos
	public void setValor(int n) { 
		num = n;
		int f = 1; // variável
		String s = ""; // preencher uma String, vazia
		for (int c = n; c > 1; c--) {// calculo do fatorial de 1, meu contador vai começar com um número; enquanto meu contador for maior que 1; eu tiro uma unidade dele
			f *= c; // o meu fatorial vai ser o meu fatorial vezes o meu contador
			s += c + " x "; //  String s, concatenado com meu contador + concatenado com 'x'
		}
		s += "1 = ";
		fat = f; // fatorial que é o atributo receba 'f'
		formula = s;// String formula receba 's'
	}

	public int getFatorial() { // metodo que retorno o valor do fatorial
		return fat;
	}

	public String getFormula() { //método que retorna a formula 
		return formula;
	}	
	
}
